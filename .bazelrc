# `repo_env` is required for the LLVM bazel build.
build \
  --copt=-Wno-parentheses \
  --copt=-Wno-sign-compare \
  --copt=-Wno-misleading-indentation \
  --copt=-Wno-narrowing \
  --strict_proto_deps=off \
  --cxxopt=-std=c++17 \
  --host_cxxopt=-std=c++17 \
  --repo_env=CC=clang \
  --define=use_fast_cpp_protos=true
